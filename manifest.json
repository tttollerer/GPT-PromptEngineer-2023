{
  "manifest_version": 3,
  "name": "ChatGPT PromptEngineer 2023",
  "version": "1.3",
  "description": "WRITE LESS, GET MORE, PER CLICK - Specify U´r Topic | Share U´ŕ Needs | Receive Personalized No Random Results | A Lot Languages",
  "icons": {
    "16": "Images/icon16.png",
    "48": "Images/icon48.png",
    "128": "Images/icon128.png"
  },
  
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://bard.google.com/*",
        "https://www.bing.com/*"
      ],
      "js": [
        "settings.js", 
        "input_field_creation.js",
        "XML/translations.json",
        "fetch_data.js", 
        "build_ui.js",
        "language_switcher.js",
        "content_script.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "minimum_chrome_version": "92",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
  {
    "resources": [
      "settings.js", 
      "XML/translations.json",
      "input_field_creation.js", 
      "XML/data_en.xml", 
      "XML/data_de.xml", 
      "XML/data_ch.xml", 
      "XML/data_sch.xml", 
      "XML/translations.json",
      "Images/logo.png",
      "Images/icon128.png",
      "Images/icon48.png",
      "Images/icon16.png",
      "Images/OnOff.png",
      "content_script.js"],
    "run_at": "document_idle",
    "use_dynamic_url": false,
    "matches": [
      "https://chat.openai.com/*",
      "https://bard.google.com/*",
      "https://www.bing.com/*"]
  }]
}
